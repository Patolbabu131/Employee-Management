
@model WebApplication9.Models.AllModel

@{
    ViewBag.Title = "Create1";
}

@{
    var data = ViewBag.Message;
}
<!-- Modal -->
<div class="modal fade" id="Add_Salary" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
           
                <h5 class="modal-title" id="exampleModalLabel">Add Salary details for <i><b>@data.name</b></i></h5>
               
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h1 hidden>jay shree ram</h1>
                
                <div class="row">
                    <div id="contanerforsal">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" hidden>
                                <label asp-for="Salary.Emp_No" class="control-label"></label>
                                <input id="liWithID" type="text" class="Disable" asp-for="Salary.Emp_No" value="" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.Basic" class="control-label"></label>
                                <input asp-for="Salary.Basic" class="form-control" />
                                <span asp-validation-for="Salary.Basic" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.DA" class="control-label"></label>
                                <input asp-for="Salary.DA" class="form-control" />
                                <span asp-validation-for="Salary.DA" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.HRA" class="control-label"></label>
                                <input asp-for="Salary.HRA" class="form-control" />
                                <span asp-validation-for="Salary.HRA" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.FA" class="control-label"></label>
                                <input asp-for="Salary.FA" class="form-control" />
                                <span asp-validation-for="Salary.FA" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.ME" class="control-label"></label>
                                <input asp-for="Salary.ME" class="form-control" />
                                <span asp-validation-for="Salary.ME" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.SM" class="control-label"></label>
                                <input asp-for="Salary.SM" class="form-control" />
                                <span asp-validation-for="Salary.SM" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.SY" class="control-label"></label>
                                <input asp-for="Salary.SY" class="form-control" />
                                <span asp-validation-for="Salary.SY" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary.month_year" class="control-label"></label>
                                <input asp-for="Salary.month_year" type="month" class="form-control" />
                                <span asp-validation-for="Salary.month_year" class="text-danger"></span>
                            </div>
                     
                            <hr>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>