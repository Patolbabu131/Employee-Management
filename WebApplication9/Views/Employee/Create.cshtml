

@model WebApplication9.Models.Employee
@{
    ViewBag.Title = "partial";
}

@{
    var data = ViewBag.Message;
}
<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <div>
                        <h1 hidden><i><b>jay shree ram</b></i></h1>
                        <form asp-action="View">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="name" class="control-label"></label>
                                <input asp-for="name" class="form-control" />
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label >Gender : </label>
                                <input type="radio" asp-for="gender" value="Male" />
                                <label> Male</label>
                                <input type="radio" asp-for="gender" value="female"  />
                                <label>Female</label>
                                <input type="radio" asp-for="gender" value="Other"  />
                                <label>Other</label>
                               
                            </div>
                            <div class="form-group">
                                <label asp-for="DOB" class="control-label"></label>
                                <input type="date" asp-for="DOB" class="form-control" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DOJ" class="control-label"></label>
                                <input  type="date" asp-for=" DOJ" class="form-control" />
                                <span asp-validation-for="DOJ" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contact_No" class="control-label"></label>
                                <input asp-for="Contact_No" class="form-control" />
                                <span asp-validation-for="Contact_No" class="text-danger"></span>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <div class="form-group">
                    <input type="submit" value="Create" onclick="Create_Emp()" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>


